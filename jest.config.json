{
  "testEnvironment": "node",
  "setupFilesAfterEnv": ["<rootDir>/test/setup.js"],
  "testMatch": [
    "**/test/**/*.test.js"
  ],
  "collectCoverageFrom": [
    "app.js",
    "!node_modules/**"
  ],
  "coverageDirectory": "coverage",
  "coverageReporters": [
    "text",
    "lcov",
    "html"
  ]
}